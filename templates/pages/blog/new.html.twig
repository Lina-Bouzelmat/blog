{% extends 'base.html.twig' %}
{% block title %}SymBlog- Nouveau Blog{% endblock %}
{% block body %} 
<div class="container">
    <h1 class="mt-4">Cr√©ation d' un Blog</h1>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-4">
        {{ message }}
    </div>
    {% endfor %}


    {{ form_start(form) }}

    <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            <div class="form-error">
            {{ form_errors(form.name) }}
            </div>
    </div>
    <div class="form-group">
            {{ form_label(form.createur) }}
            {{ form_widget(form.createur) }}
            <div class="form-error">
            {{ form_errors(form.createur) }}
            </div>
    </div>
    <div class="form-group">
            {{ form_label(form.theme) }}
            {{ form_widget(form.theme) }}
            <div class="form-error">
            {{ form_errors(form.theme) }}
            </div>
    </div>
    <div class="form-group">
            {{ form_label(form.details) }}
            {{ form_widget(form.details) }}
            <div class="form-error">
            {{ form_errors(form.details) }}
            </div>
    </div>
    <div class="form-group">
            {{ form_label(form.isFavorite) }}
            {{ form_widget(form.isFavorite) }}
            <div class="form-error">
            {{ form_errors(form.isFavorite) }}
            </div>
    </div>
    
    {{ form_row(form.articles) }}

    <div class="form-group">
            {{ form_row(form.submit) }}
    </div>

    {{ form_end(form) }}

</div>
{% endblock %}